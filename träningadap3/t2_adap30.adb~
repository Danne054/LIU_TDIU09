
with Ada.Integer_Text_IO;   use Ada.Integer_Text_IO;
with Ada.Float_Text_IO;     use Ada.Float_Text_IO;
with Ada.Text_IO;           use Ada.Text_IO;

procedure T2_Adap30 is 
   
   --subtyper 
   subtype Inner_Array_Range is 
     Integer range 76..79;
   
   --typer
   type Record_Type is
      record
	 V : Float;
	 R : Integer;
      end record;
   
   type Inner_Array is 
     array (Inner_Array_Range) of Record_Type;
   
   type Outer_Array is 
     array (Boolean'Range, Boolean'Range) of Inner_Array;
   
   --get
   procedure Get(Item : out Record_Type) is
      
      Empty : Character;
   begin
      
      Get(Item.V);
      Get(Empty);
      Get(Item.R);
   end Get;
   
   procedure Get(Item : out Inner_Array) is
      
      Empty : Character;
   begin
      
      for I in reverse Item'Range loop
	 Get(Item(I));
	 
	 if I /= Item'First then
	    Get(Empty);
	 end if;
      end loop;
   end Get;
   
   procedure Get(Item : out Outer_Array) is
      
      Empty : Character;
   begin
      
      for X in reverse Item'Range(1) loop
	 for Y in reverse Item'Range(2) loop
	    Get(Item(X, Y));
	    
	    if not( X = Item'First and Y = Item'First) then
	       Get(Empty);
	    end if;
	 end loop;
      end loop;
   end Get;
   
   --put
   procedure Put(Item : in Record_Type) is 
      
   begin 
      Put(Item.V, Fore => 0, Aft => 2, Exp =>0);
      Put(' ');
      Put(Item.R, Width => 0);
   end Put;
   
   procedure Put(Item : in Inner_Array) is
      
   begin 
      
      for I in reverse Item'Range loop
	 Put(Item(I));
	 
	 if I /= Item'First then
	    Put(' ');
	 end if;
      end loop;
   end Put;
   
   procedure Put(Item : in Outer_Array) is
      
   begin
      
      for X in reverse Item'Range(1) loop
	 for Y in reverse Item'Range(2) loop
	    Put(Item(X, Y));
	    
	    if not( X = Item'First and Y = Item'First) then
	       Put(' ');
	    end if;
	 end loop;
      end loop;
   end Put;
   
   T : Outer_Array;
begin
   
   Put("Mata in datamängd: ");
   Get(T);
   Skip_Line;
   
   Put("Inmatad datamängd: ");
   Put(T);
end T2_Adap30;
