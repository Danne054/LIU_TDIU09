-- danba623: Arbetat enskilt

with Ada.Integer_Text_IO;   use Ada.Integer_Text_IO;
with Ada.Float_Text_IO;     use Ada.Float_Text_IO;
with Ada.Text_IO;           use Ada.Text_IO;

procedure Ada_P3 is
   
   --subtyper--
   subtype Inner_Array_Range_X is 
     Integer range -15..-12;
   
   subtype Inner_Array_Range_Y is 
     Integer range 17..18;
   
   subtype Oter_Array_Range is 
     Integer range -17..-16;
   
   --typer--
   type Inner_Array is 
     array (Inner_Array_Range_X, Inner_Array_Range_Y) of Character;
   
   type Record_Type is 
      record 
	 V, A : Inner_Array;
      end record;
   
   type Oter_Array is 
     array (Oter_Array_Range) of Record_Type;
   
   --get--
   procedure Get(Item : out Inner_Array) is 
      
      Empty : Character;
   begin 
      
      for Y in reverse Item'Range(2) loop
	 for X in reverse Item'Range(1) loop
	    
	    if not (X = Item'Last(1) and Y = Item'Last(2)) then
	       Get(Empty);
	    end if;
	    
	    Get(Item(X, Y));
	 end loop;
      end loop;
   end Get;
   
   
   procedure Get(Item : out Record_Type) is 
      
      Empty : Character;
   begin
      
      Get(Item.V);
      Get(Empty);
      Get(Item.A);
   end Get;
   
   
   procedure Get(Item : out Oter_Array) is 
      
      Empty : Character;
   begin
      
      for I in Item'Range loop
	 
	 if not(I = Item'First) then 
	    Get(Empty);
	 end if;
	 
	 Get(Item(I));
      end loop;
   end Get;
   
   --put--
   procedure Put(Item : in Inner_Array) is 
      
   begin 
      
      for Y in Item'Range(2) loop
	 for X in Item'Range(1) loop
	    
	    if not (X = Item'First(1) and Y = Item'First(2)) then
	       Put(' ');
	    end if;
	    
	    Put(Item(X, Y));
	 end loop;
      end loop;
   end Put;
   
   
   procedure Put(Item : in Record_Type) is 
      
   begin
      
      Put(Item.V);
      Put(' ');
      Put(Item.A);
   end Put;
   
   
   procedure Put(Item : in Oter_Array) is 
      
   begin
      
      for I in Item'Range loop

	 if not(I = Item'First) then 
	    Put(' ');
	 end if;
	 
	 Put(Item(I));
      end loop;
   end Put;
   
   --declarera--
   T : Oter_Array;
   
begin
   
   Put("Mata in datamängd: ");
   Get(T);
   Skip_Line;
   
   Put("Inmatad datamängd: ");
   Put(T);
end Ada_P3;
